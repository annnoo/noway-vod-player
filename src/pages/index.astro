---
// Style Imports
import '../styles/global.css';

// Component Imports
import Layout from '../layouts/Layout.astro';
import TwitchChannelEmbed from '../components/vod/TwitchChannelEmbed.svelte';
---
<Layout title="VOD Player" description="View Twitch VODs with interactive event timelines">

    <script src= "https://player.twitch.tv/js/embed/v1.js"></script>
	<div class="container mx-auto p-4">
		<h1 class="text-3xl font-bold mb-6">VOD Player</h1>
		<p class="text-gray-600 mb-4">Welcome to the VOD Player. View VODs with interactive event timelines.</p>
		
		<div class="mb-6">
			<h2 class="text-xl font-semibold mb-2">Demo</h2>
			<TwitchChannelEmbed client:load video="2481364998" width="100%" height="500px" />
		</div>
		
		<div class="mt-6">
			<h2 class="text-xl font-semibold mb-2">Usage</h2>
			<p class="text-gray-600">Navigate to <code class="bg-gray-100 px-2 py-1 rounded">/vod/[vodId]</code> to view a specific VOD with its event timeline.</p>
		</div>
	</div>
</Layout>
